{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "dotenv"],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
