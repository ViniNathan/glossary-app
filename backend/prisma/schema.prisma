generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  xp        Int
  lives     Int
  sessions  Session[]
  rankings  Ranking[]
}

model Session {
  id             String    @id @default(uuid())
  user           User      @relation(fields: [userId], references: [id])
  userId         String
  start_time     DateTime
  end_time       DateTime?
  lives_remaining Int
  xp_earned      Int
  attempts       Attempt[]
}

model Ranking {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  week_start DateTime
  week_end   DateTime
  total_xp   Int
}

model Word {
  id                    String   @id @default(uuid())
  english_word          String
  portuguese_translation String
  difficulty_level      String
  attempts              Attempt[]
}

model Attempt {
  id                String   @id @default(uuid())
  session           Session  @relation(fields: [sessionId], references: [id])
  sessionId         String
  word              Word     @relation(fields: [wordId], references: [id])
  wordId            String
  translation_method String
  is_correct        Boolean
  timestamp         DateTime
}
